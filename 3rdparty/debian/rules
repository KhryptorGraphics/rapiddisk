#!/usr/bin/make -f
# See debhelper(7) (uncomment to enable)
# output every command that modifies files on the build system.
#export DH_VERBOSE = 1

# see FEATURE AREAS in dpkg-buildflags(1)
#export DEB_BUILD_MAINT_OPTIONS = hardening=+all

# see ENVIRONMENT in dpkg-buildflags(1)
# package maintainers to append CFLAGS
#export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
# package maintainers to append LDFLAGS
#export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed

# see EXAMPLES in dpkg-buildflags(1) and read /usr/share/dpkg/*
DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

override_dh_auto_clean:
	$(MAKE) -C $(CURDIR)/src clean

override_dh_auto_build:
	$(MAKE) -C $(CURDIR)/src
	cp $(CURDIR)/conf/rapiddiskd.service $(CURDIR)/debian/rapiddiskd.service

override_dh_clean:
	dh_clean --exclude=rapiddisk_sub.orig --exclude=run_rapiddisk.sh.orig

override_dh_auto_install:
	$(MAKE) -C $(CURDIR)/src install DESTDIR=$(CURDIR)/debian/rapiddisk
	sed -e "s/DEB_VERSION_UPSTREAM/$(DEB_VERSION_UPSTREAM)/g" debian/install.in > debian/rapiddisk.install

override_dh_installinit:
	dh_installinit --name=rapiddiskd
	dh_installsystemd --name=rapiddiskd rapiddiskd.service

override_dh_auto_test:

override_dh_dkms:
	dh_dkms -V $(DEB_VERSION_UPSTREAM)

override_dh_dwz:

%:
	dh ${@} --with dkms

